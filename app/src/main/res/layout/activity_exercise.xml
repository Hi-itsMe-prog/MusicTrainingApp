<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E3F2FD">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/back_button"
        android:contentDescription="@string/back_button"
        android:padding="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите упражнение"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Интервалы -->
    <com.example.musictrainingapp.CustomButt2
        android:id="@+id/cardIntervals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:title="Интервалы"
        app:subtitle="Точность: 0%"
        app:iconTint="#3F51B5" />

    <!-- Трезвучия -->
    <com.example.musictrainingapp.CustomButt2
        android:id="@+id/cardChords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:title="Трезвучия"
        app:subtitle="Точность: 0%"
        app:iconTint="#3F51B5" />

    <!-- Септаккорды -->
    <com.example.musictrainingapp.CustomButt2
        android:id="@+id/cardSeventhChords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:title="Септаккорды"
        app:subtitle="Точность: 0%"
        app:iconTint="#3F51B5" />

    <!-- Нонаккорды -->
    <com.example.musictrainingapp.CustomButt2
        android:id="@+id/cardNinthChords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:title="Нонаккорды"
        app:subtitle="Точность: 0%"
        app:iconTint="#3F51B5" />

    <!-- Словарь терминов -->
    <com.example.musictrainingapp.CustomButt2
        android:id="@+id/cardDictionary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_menu_agenda"
        app:title="Учить иностранные термины"
        app:subtitle="Изучено: 0%"
        app:iconTint="#3F51B5" />

</LinearLayout>