<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E3F2FD">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите упражнение"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Рекомендация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рекомендация"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сегодня рекомендуем повторить интервалы"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Список упражнений -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Все упражнения"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Интервалы -->
    <LinearLayout
        android:id="@+id/cardIntervals"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_btn_speak_now"
            app:tint="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Интервалы"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIntervalProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Точность: 0%"
                android:textSize="12sp"
                android:textColor="#757575" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#9E9E9E" />

    </LinearLayout>

    <!-- Трезвучия -->
    <LinearLayout
        android:id="@+id/cardChords"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_lock_lock"
            app:tint="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Трезвучия"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvChordProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Точность: 0%"
                android:textSize="12sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#9E9E9E" />

    </LinearLayout>

    <!-- Септаккорды -->
    <LinearLayout
        android:id="@+id/cardSeventhChords"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_view"
            app:tint="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Септаккорды"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSeventhChordProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Точность: 0%"
                android:textSize="12sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#9E9E9E" />

    </LinearLayout>

    <!-- Нонаккорды -->
    <LinearLayout
        android:id="@+id/cardNinthChords"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_compass"
            app:tint="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нонаккорды"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvNinthChordProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Точность: 0%"
                android:textSize="12sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#9E9E9E" />

    </LinearLayout>

    <!-- Словарь терминов -->
    <LinearLayout
        android:id="@+id/cardDictionary"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/cards"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Учить иностранные термины"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDictionaryProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изучено: 0%"
                android:textSize="12sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#9E9E9E" />

    </LinearLayout>

</LinearLayout>